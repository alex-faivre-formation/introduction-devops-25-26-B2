# ✅ FICHIER .env.example - BONNES PRATIQUES DE SÉCURITÉ

# Database Configuration
# Utilisez des placeholders, jamais de vraies valeurs
DATABASE_URL=postgresql://USERNAME:PASSWORD@localhost:5432/DATABASE_NAME
REDIS_PASSWORD=your_redis_password_here
JWT_SECRET=your_jwt_secret_key_here

# API Keys
# Générez vos propres clés sur les plateformes respectives
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
GOOGLE_API_KEY=your_google_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS Credentials
# Utilisez IAM roles en production plutôt que des clés statiques
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# GitHub Token
# Utilisez des Personal Access Tokens avec le minimum de permissions
GITHUB_TOKEN=your_github_token

# Private Key
# Stockez les clés privées en dehors du repo (ex: secrets manager)
PRIVATE_KEY=your_private_key_path_or_content

# OAuth
# Obtenez vos credentials OAuth depuis les consoles des providers
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Admin Credentials
# Utilisez des mots de passe forts et ne les commitez JAMAIS
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_strong_password
ADMIN_EMAIL=admin@yourdomain.com

# Encryption Keys
# Générez des clés aléatoires cryptographiquement sûres
ENCRYPTION_KEY=your_32_character_encryption_key
AES_KEY=your_32_character_aes_key

# Session
# Générez un secret de session aléatoire et unique
SESSION_SECRET=your_session_secret

# Slack Webhook
# Créez un webhook depuis les paramètres de votre workspace Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Bot
# Créez un bot sur Discord Developer Portal
DISCORD_BOT_TOKEN=your_discord_bot_token

# Twilio
# Obtenez vos credentials depuis la console Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Database Connection Strings
# Évitez de mettre les credentials dans l'URL, utilisez des variables séparées
MONGO_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/DATABASE
MYSQL_CONNECTION=mysql://USERNAME:PASSWORD@localhost:3306/DATABASE

# API Endpoints
# Ne mettez jamais de credentials dans les URLs
API_URL=https://api.example.com/v1
